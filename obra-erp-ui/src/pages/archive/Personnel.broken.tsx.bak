  const [periodDetails, setPeriodDetails] = useState<(PayrollPeriod & { entries: PayrollEntry[] }) | null>(null);
  const [periodDetailsCache, setPeriodDetailsCache] = useState<Record<number, PayrollPeriod & { entries: PayrollEntry[] }>>({});
  const [entryForm, setEntryForm] = useState<AdjustmentFormState>(() => defaultAdjustmentForm());
